---
import Layout from '../../../layouts/Layout.astro';
import { lessons } from '../../../data/lessons';
---

<Layout>
  <main>
    <div class="max-w-4xl mx-auto px-6 py-24 sm:py-32">
      <h1 class="font-heading text-sabeel-blue-900 text-4xl sm:text-5xl lg:text-6xl mb-4">
        Foundations of Faith
      </h1>
      <p class="text-sabeel-teal-800 text-lg sm:text-xl leading-relaxed mb-12">
        Essential lessons about Islamic beliefs and practices,
        explained with clarity and depth.
      </p>

      <div class="flex flex-col gap-6">
        {
          lessons.map((lesson) => (
            <a
              href={
                lesson.status === 'published'
                  ? `/lessons/foundations-of-faith/${lesson.slug}`
                  : '#'
              }
              class={`block bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transform transition-transform duration-200 ease-in-out hover:-translate-y-0.5 ${lesson.status === 'coming-soon' ? 'opacity-80 cursor-default' : ''}`}
            >
              <span class="text-blue-500 font-semibold text-sm block mb-2">Lesson {lesson.order}</span>
              <h2 class="text-sabeel-blue-900 text-xl font-semibold mb-3">{lesson.title}</h2>
              <p class="text-sabeel-teal-800 leading-relaxed">{lesson.description}</p>
              {lesson.status === 'coming-soon' && (
                <span class="absolute top-4 right-4 bg-blue-100 text-blue-600 px-4 py-2 rounded-full text-sm font-medium">Coming Soon</span>
              )}
            </a>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
