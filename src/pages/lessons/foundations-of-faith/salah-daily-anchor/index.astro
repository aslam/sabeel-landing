        margin-bottom: 2rem;
      }

      .parent-note,
      .workshop-section,
      .challenge-section,
      .practical-section {
        margin-top: 1.5rem;
      }

      .practical-content li p {
        margin-left: 1.5rem;
      }

      .download-link {
        width: 100%;
        justify-content: center;
        padding: 0.625rem 1rem;
      }
    }

    /* Add improved typography responsiveness */
    @media (min-width: 769px) {
      .content-box p {
        font-size: 1.125rem;
        line-height: 1.75;
      }

      blockquote {
        font-size: 1.125rem;
        margin: 1.5rem 0;
        padding: 1rem 2rem;
      }

