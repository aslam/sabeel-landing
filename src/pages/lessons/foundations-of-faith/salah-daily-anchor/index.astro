    @media (hover: none) and (pointer: coarse) {
      .tab-button {
        min-height: 44px;
      }

      .download-link {
        min-height: 44px;
      }
    }

    h1 {
      font-family: var(--font-heading);
      color: #0a3255;
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

