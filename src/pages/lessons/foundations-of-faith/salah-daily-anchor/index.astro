      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .tab-button {
      padding: 0.75rem 1.5rem;
      border: none;
      background: #f1f5f9;
      color: #405671;
      border-radius: 9999px;
      font-weight: 500;
      cursor: pointer;
