---
import Layout from '../layouts/Layout.astro';
import { lessons } from '../data/lessons.ts';

// Get popular lessons (current lessons first, then by order)
const popularLessons = lessons
  .filter(lesson => lesson.status === 'published')
  .sort((a, b) => (b.current ? 1 : 0) - (a.current ? 1 : 0) || a.order - b.order)
  .slice(0, 3);
---

<Layout>
  <main class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50">
    <div class="container mx-auto px-4 py-16 text-center">
      <!-- Success Message -->
      <div class="max-w-2xl mx-auto mb-12">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Sabeel! ðŸŽ‰</h1>
        <p class="text-xl text-gray-600 mb-8">
          You're now part of our community of learners. Check your email for your first lesson!
        </p>
      </div>

      <!-- Checklist Download -->
      <div class="max-w-md mx-auto mb-12">
        <div class="bg-white rounded-2xl shadow-lg p-8 border border-green-200">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          
          <h2 class="text-2xl font-bold text-gray-900 mb-3">Your Free Gift</h2>
          <p class="text-gray-600 mb-6">
            Download your "5 Daily Reflections for Spiritual Growth" checklist to start your journey today.
          </p>
          
          <a 
            href="/worksheets/sabeel_5_daily_reflections.pdf"
            class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-full transition duration-300 shadow-lg"
            target="_blank"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download Checklist
          </a>
        </div>
      </div>

      <!-- Popular Lessons -->
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Start Learning Now</h2>
        <p class="text-lg text-gray-600 mb-8">
          While you wait for your first email, explore one of our most popular lessons:
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          {popularLessons.map((lesson) => (
            <a 
              href={`/lessons/${lesson.series}/${lesson.slug}`}
              class="bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 overflow-hidden block hover:scale-105 transform transition-transform duration-300"
            >
              <div class="aspect-video overflow-hidden">
                <img
                  src={lesson.image}
                  alt={lesson.title}
                  class="w-full h-full object-cover transition duration-300"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded-full capitalize">
                    {lesson.series.replace(/-/g, ' ')}
                  </span>
                  {lesson.current && (
                    <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">
                      New
                    </span>
                  )}
                </div>
                <h3 class="font-serif text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                  {lesson.title}
                </h3>
                <p class="font-sans text-sm text-gray-600 line-clamp-2">
                  {lesson.teaser || lesson.subtitle}
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- What's Next -->
      <div class="max-w-2xl mx-auto">
        <div class="bg-blue-50 border border-blue-200 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">What's Next?</h3>
          <div class="space-y-4 text-left">
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 text-sm font-bold">1</span>
              </div>
              <p class="text-gray-700">Check your email for your first daily lesson</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 text-sm font-bold">2</span>
              </div>
              <p class="text-gray-700">Use your checklist to track daily spiritual growth</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-blue-600 text-sm font-bold">3</span>
              </div>
              <p class="text-gray-700">Explore more lessons on our website</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
