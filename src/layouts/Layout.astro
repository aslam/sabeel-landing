---
import { GoogleAnalytics } from 'astro-analytics';
import { Image } from 'astro:assets';
import sabeel from '../assets/sabeel_no_text.png';
import '../styles/base.css';
import '../styles/global.css';

const currentPath = Astro.url.pathname;

// Meta tags content
const description =
  'Journey through authentic Islamic learning with daily bite-sized lessons from the Qurʾān and Ṣaḥīḥ sources.';
const title = 'Sabeel - The path to Deen';
const siteUrl = 'https://sabeel.app';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={`${siteUrl}/og-image.png`}
    />

    <!-- Additional Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#ffffff" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="default"
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Nunito:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <GoogleAnalytics id="G-T709B9JN3Y" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body
    class="bg-gradient-to-br from-primary-50 to-white min-h-screen"
  >
    <header
      class="fixed w-full bg-white/80 backdrop-blur-sm z-50 py-3 shadow-sm"
    >
      <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="w-full flex justify-between">
          {/* Left side - Logo */}
          <div class="w-1/4">
            <a href="/" class="inline-block">
              <Image
                src={sabeel}
                alt="Sabeel"
                width={38}
                height={38}
                class="h-[38px] w-auto"
                format="webp"
                quality="high"
              />
            </a>
          </div>

          {/* Right side - Navigation */}
          <div class="w-3/4 flex justify-end">
            <a
              href="/lessons"
              class="inline-flex items-center px-4 py-2 border border-primary-200 text-sm font-semibold rounded-lg text-primary-700 hover:bg-primary-50 hover:border-primary-300 transition duration-150 ease-in-out"
            >
              Early Access Lessons
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-white mt-16 py-12 border-t border-primary-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {/* Footer Left */}
          <div class="space-y-4">
            <div class="flex items-center">
              <Image
                src={sabeel}
                alt="Sabeel"
                width={32}
                height={32}
                class="h-[32px] w-auto mr-3"
                format="webp"
                quality="high"
              />
            </div>
            <p class="text-sm text-primary-600 max-w-md">
              Join us on a journey of continuous Islamic learning
              through authentic, bite-sized lessons delivered daily.
            </p>
            <div class="text-sm text-primary-500 font-semibold">
              Coming Soon
            </div>
            <p class="text-sm text-primary-500">
              © {new Date().getFullYear()} Sabeel. All rights reserved.
            </p>
          </div>

          {/* Footer Right */}
          <div class="space-y-4 md:text-right">
            <h3 class="text-sm font-semibold text-primary-900">
              Contact
            </h3>
            <div class="space-y-4">
              <a
                href="mailto:support@sabeel.in"
                class="text-sm text-primary-600 hover:text-primary-800 transition duration-150 ease-in-out block"
              >
                support@sabeel.in
              </a>

              <div class="flex gap-4 md:justify-end">
                <a
                  href="https://twitter.com/SabeelSupport"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-800 transition duration-150"
                  aria-label="Follow us on Twitter"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                    ></path>
                  </svg>
                </a>
                <a
                  href="https://instagram.com/sabeel_support"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-800 transition duration-150"
                  aria-label="Follow us on Instagram"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                    ></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: block;
  }

  .logo img {
    height: 38px;
    width: auto;
    display: block;
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }

  nav li a {
    color: #405671;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  nav li a:hover {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.05);
  }

  nav li a.active {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.08);
  }

  main {
    flex: 1;
  }

  footer {
    margin-top: auto;
    width: 100%;
    padding: 3rem 0;
    background: rgba(255, 255, 255, 0.9);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-left {
    flex-shrink: 0;
    max-width: 460px;
  }

  .team-info {
    margin-top: 1rem;
  }

  .team-info p {
    margin: 0.75rem 0;
    line-height: 1.6;
    color: #405671;
  }

  .team-description {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .launch-status {
    font-size: 0.875rem;
    font-weight: 600;
    color: #3b82f6 !important;
  }

  .copyright {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .footer-right {
    flex-shrink: 0;
  }

  .social-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: #405671;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 6px;
  }

  .social-links a:hover {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.05);
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.75rem 1rem;
    }

    .logo img {
      height: 32px;
    }

    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 0 1rem;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
