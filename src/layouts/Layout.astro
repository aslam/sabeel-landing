---
import { GoogleAnalytics } from 'astro-analytics';
import { Image } from 'astro:assets';
import sabeel from '../assets/sabeel_no_text.png';
import '../styles/global.css';

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Sabeel - Daily Islamic Learning Made Simple</title>

    <!-- Primary Meta Tags -->
    <meta
      name="description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      name="keywords"
      content="Islamic learning, daily Islamic lessons, Muslim education, Sabeel app, short Islamic content, Islamic habit building, daily Islamic knowledge, Islamic reflection, Sabeel"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sabeel.in/" />
    <meta
      property="og:title"
      content="Sabeel - Daily Islamic Learning Made Simple"
    />
    <meta
      property="og:description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      property="og:image"
      content="https://sabeel.in/images/sabeel_og_image.png"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://sabeel.in/" />
    <meta
      name="twitter:title"
      content="Sabeel - A trusted path to daily Islamic learning"
    />
    <meta
      name="twitter:description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      name="twitter:image"
      content="https://sabeel.in/images/sabeel_og_image.png"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400;1,700&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
      rel="stylesheet"
    />

    <GoogleAnalytics id="G-T709B9JN3Y" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">
          <Image
            src={sabeel}
            width={120}
            height={38}
            alt="Sabeel Logo"
            format="webp"
            quality="high"
          />
        </a>
        <ul>
          <li>
            <a
              href="/lessons"
              class={currentPath.startsWith('/lessons')
                ? 'active'
                : ''}
            >
              Lessons
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: block;
  }

  .logo img {
    height: 38px;
    width: auto;
    display: block;
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }

  nav li a {
    color: #405671;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    padding: 0.5rem 1rem;
    border-radius: 6px;
  }

  nav li a:hover {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.05);
  }

  nav li a.active {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.08);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.75rem 1rem;
    }

    .logo img {
      height: 32px;
    }
  }
</style>
