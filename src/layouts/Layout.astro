---
import { GoogleAnalytics } from 'astro-analytics';
import { Image } from 'astro:assets';
import sabeel from '../assets/sabeel_no_text.png';
import '../styles/base.css';
import '../styles/global.css';

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Sabeel - Daily Islamic Learning Made Simple</title>

    <!-- Primary Meta Tags -->
    <meta
      name="description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      name="keywords"
      content="Islamic learning, daily Islamic lessons, Muslim education, Sabeel app, short Islamic content, Islamic habit building, daily Islamic knowledge, Islamic reflection, Sabeel"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sabeel.in/" />
    <meta
      property="og:title"
      content="Sabeel - Daily Islamic Learning Made Simple"
    />
    <meta
      property="og:description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      property="og:image"
      content="https://sabeel.in/images/sabeel_og_image.png"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://sabeel.in/" />
    <meta
      name="twitter:title"
      content="Sabeel - A trusted path to daily Islamic learning"
    />
    <meta
      name="twitter:description"
      content="Join Sabeel for 5-minute daily lessons to deepen your Islamic knowledge, one day at a time."
    />
    <meta
      name="twitter:image"
      content="https://sabeel.in/images/sabeel_og_image.png"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400;1,700&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
      rel="stylesheet"
    />

    <GoogleAnalytics id="G-T709B9JN3Y" />

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <header>
      <nav>
        <a href="/" class="logo">
          <Image
            src={sabeel}
            width={120}
            height={38}
            alt="Sabeel Logo"
            format="webp"
            quality="high"
          />
        </a>
        <ul>
          <li>
            <a
              href="/lessons"
              class={currentPath.startsWith('/lessons')
                ? 'active'
                : ''}
            >
              Lessons
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
    <footer>
      <div class="footer-content">
        <div class="footer-left">
          <p class="copyright">
            Â© {new Date().getFullYear()} Sabeel
          </p>
          <div class="team-info">
            <p>
              Built with love and duas by the <strong
                >Sabeel Team</strong
              >.
            </p>
            <p class="team-description">
              We're a small team of Muslims who are passionate about
              making Islamic learning accessible and enjoyable for
              everyone.
            </p>
            <p class="launch-status">Coming soon, Insha'Allah</p>
          </div>
        </div>
        <div class="footer-right">
          <ul class="social-links">
            <li>
              <a
                href="https://twitter.com/SabeelSupport"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Twitter"
              >
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                >
                  <path
                    d="M22 4.01c-1 .49-1.98.689-3 .99-1.121-1.265-2.783-1.335-4.38-.737S11.977 6.323 12 8v1c-3.245.083-6.135-1.395-8-4 0 0-4.182 7.433 4 11-1.872 1.247-3.739 2.088-6 2 3.308 1.803 6.913 2.423 10.034 1.517 3.58-1.04 6.522-3.723 7.651-7.742a13.84 13.84 0 0 0 .497-3.753C20.18 7.773 21.692 5.25 22 4.009z"
                    fill="currentColor"></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://instagram.com/sabeel_support"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
              >
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                >
                  <path
                    d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm0 8.333a3.333 3.333 0 1 1 0-6.666 3.333 3.333 0 0 1 0 6.666zm6.5-8.87a1.17 1.17 0 1 1-2.34 0 1.17 1.17 0 0 1 2.34 0z"
                    fill="currentColor"></path>
                </svg>
              </a>
            </li>
            <li>
              <a href="mailto:support@sabeel.in" aria-label="Email">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                >
                  <path
                    d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                    fill="currentColor"></path>
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: block;
  }

  .logo img {
    height: 38px;
    width: auto;
    display: block;
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }

  nav li a {
    color: #405671;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  nav li a:hover {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.05);
  }

  nav li a.active {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.08);
  }

  main {
    flex: 1;
  }

  footer {
    margin-top: auto;
    width: 100%;
    padding: 3rem 0;
    background: rgba(255, 255, 255, 0.9);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-left {
    flex-shrink: 0;
    max-width: 460px;
  }

  .team-info {
    margin-top: 1rem;
  }

  .team-info p {
    margin: 0.75rem 0;
    line-height: 1.6;
    color: #405671;
  }

  .team-description {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .launch-status {
    font-size: 0.875rem;
    font-weight: 600;
    color: #3b82f6 !important;
  }

  .copyright {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .footer-right {
    flex-shrink: 0;
  }

  .social-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: #405671;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 6px;
  }

  .social-links a:hover {
    color: #0a3255;
    background: rgba(10, 50, 85, 0.05);
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.75rem 1rem;
    }

    .logo img {
      height: 32px;
    }

    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 0 1rem;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
