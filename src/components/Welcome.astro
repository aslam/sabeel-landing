  .container {
    max-width: 600px;
    margin: 60px auto;
    background-color: #f8ebd5;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
  }

  #logo {
    display: block;
    margin: 0 auto 20px;
    align-self: center;
  }

  h1,
  h2 {
    color: #27625b;
  }

  h1 {
    font-size: 2em;
    margin-bottom: 0.25em;
  }

  p {
    line-height: 1.6;
  }

  ul {
    margin: 1em 0;
    padding-left: 20px;
  }

  input[type='email'] {
    padding: 10px;
    font-size: 16px;
    width: calc(100% - 120px);
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-right: 10px;
  }

  button {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #4d6659;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  footer {
    margin-top: 40px;
    font-size: 0.9em;
    color: #666;
    text-align: center;
  }

  .form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 20px;
  }

  @media (max-width: 500px) {
    .form-row {
      flex-direction: column;
    }

    input[type='email'] {
      width: 100%;
    }

    button {
      width: 100%;
    }
  }
</style>
