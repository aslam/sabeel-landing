---
import { Image } from 'astro:assets';
import sabeel from '../assets/sabeel.png';
---

<div class="min-h-screen">
  <!-- Hero Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <Image
        src={sabeel}
        width={380}
        height={120}
        class="mx-auto mb-8 w-[280px] sm:w-[380px]"
        alt="Sabeel Logo"
        format="webp"
        quality="high"
      />
      <h2
        class="text-3xl sm:text-4xl font-heading text-primary-900 mb-6"
      >
        The path to Deen. One day at a time.
      </h2>
      <p
        class="text-lg sm:text-xl text-primary-700 mb-8 max-w-2xl mx-auto"
      >
        Join us on a journey of continuous Islamic learning through
        bite-sized, authentic lessons delivered daily.
      </p>
      <div class="mt-8">
        <form
          action="https://buttondown.com/api/emails/embed-subscribe/sabeel"
          method="post"
          class="max-w-md mx-auto bg-white rounded-lg shadow-xl p-6"
        >
          <label
            class="block text-primary-900 font-semibold mb-2"
            for="bd-email"
          >
            Get Early Access
          </label>
          <input
            type="email"
            name="email"
            id="bd-email"
            placeholder="Enter your email"
            class="w-full px-4 py-3 rounded-lg border border-primary-200 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 mb-4"
            required
          />
          <button
            type="submit"
            class="w-full bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-primary-700 transition duration-200"
          >
            Notify Me
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- What is Sabeel Section -->
  <section class="py-16 bg-gradient-to-b from-white to-primary-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2
        class="text-3xl font-heading text-primary-900 text-center mb-12"
      >
        What is Sabeel?
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            Authentic Sources
          </h3>
          <p class="text-primary-700">
            Lessons carefully curated from the Qurʾān and authentic
            Hadith
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            Bite-sized Learning
          </h3>
          <p class="text-primary-700">
            5-minute daily lessons designed to fit your busy schedule
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            Progressive Path
          </h3>
          <p class="text-primary-700">
            Structured learning journey from basics to advanced topics
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Tailored for Every Soul Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <h2
        class="text-3xl font-heading text-primary-900 text-center mb-12"
      >
        Tailored for Every Soul
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            For Kids
          </h3>
          <ul class="space-y-2 text-primary-700">
            <li>• Interactive stories from Islamic history</li>
            <li>• Fun quizzes and rewards</li>
            <li>• Parent-guided learning mode</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            For Teens
          </h3>
          <ul class="space-y-2 text-primary-700">
            <li>• Relevant contemporary topics</li>
            <li>• Peer discussion features</li>
            <li>• Progress tracking</li>
          </ul>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="font-heading text-xl text-primary-900 mb-4">
            For Adults
          </h3>
          <ul class="space-y-2 text-primary-700">
            <li>• Deep dive into Islamic sciences</li>
            <li>• Practical daily applications</li>
            <li>• Advanced study paths</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon Features -->
  <section class="py-16 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-heading text-primary-900 mb-8">
        Coming Soon
      </h2>
      <div class="grid sm:grid-cols-2 gap-6 max-w-2xl mx-auto">
        <div class="bg-white p-4 rounded-lg shadow-md">
          <p class="text-primary-900">Multi-language Support</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <p class="text-primary-900">Audio Lessons</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <p class="text-primary-900">Progress Tracking</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <p class="text-primary-900">Family Plans</p>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* Custom styles for Sabeel */

  /* Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  /* Colors */
  :root {
    --primary-50: #f9fafb;
    --primary-100: #f3f4f6;
    --primary-200: #e5e7eb;
    --primary-300: #d1d5db;
    --primary-400: #9ca3af;
    --primary-500: #6b7280;
    --primary-600: #4b5563;
    --primary-700: #374151;
    --primary-800: #1f2937;
    --primary-900: #111827;
  }

  /* Custom Utilities */
  @layer utilities {
    .font-heading {
      @apply font-extrabold tracking-tight;
    }

    .bg-primary {
      @apply bg-primary-500;
    }

    .text-primary {
      @apply text-primary-500;
    }

    .border-primary {
      @apply border-primary-500;
    }

    .shadow-primary {
      @apply shadow-lg;
    }

    /* Add more custom utilities as needed */
  }

  /* Global Styles */
  html {
    scroll-behavior: smooth;
  }

  body {
    @apply bg-primary-50 text-primary-900 antialiased;
    font-family: 'Inter', sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-heading leading-tight;
  }

  p {
    @apply text-base leading-relaxed;
  }

  a {
    @apply text-primary-600 hover:text-primary-700 transition duration-200;
  }

  /* Component Styles */
  /* Add any component-specific styles here */
</style>
