---
import { lessons } from '../data/lessons.ts';

// Get current lessons and recent published lessons
const currentLessons = lessons.filter(lesson => lesson.current);
const recentLessons = lessons
  .filter(lesson => lesson.status === 'published' && !lesson.current)
  .sort((a, b) => b.order - a.order)
  .slice(0, 6);

// Combine current lessons first, then recent ones
const featuredLessons = [...currentLessons, ...recentLessons].slice(0, 6);
---

<!-- FEATURED LESSONS SECTION -->
<section class="max-w-7xl mx-auto py-16 px-4 md:px-8">
  <div class="text-center mb-12">
    <h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">Explore Our Lessons</h2>
    <p class="font-sans text-lg text-gray-600 max-w-2xl mx-auto">
      Start your daily spiritual journey with these carefully crafted lessons
    </p>
  </div>

  <!-- LESSON OF THE WEEK -->
  {currentLessons.length > 0 && (
    <div class="mb-12">
      <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-2xl p-8 border border-green-200">
        <div class="flex flex-col lg:flex-row items-center gap-8">
          <div class="flex-shrink-0">
            <img
              src={currentLessons[0].image}
              alt={currentLessons[0].title}
              class="w-32 h-32 rounded-xl object-cover shadow-lg"
              loading="lazy"
            />
          </div>
          <div class="flex-1 text-center lg:text-left">
            <div class="inline-block bg-green-100 text-green-800 text-sm font-semibold px-3 py-1 rounded-full mb-3">
              Lesson of the Week
            </div>
            <h3 class="font-serif text-2xl font-bold text-gray-900 mb-2">
              {currentLessons[0].title}
            </h3>
            <p class="font-sans text-gray-600 mb-4">
              {currentLessons[0].subtitle}
            </p>
            <a
              href={`/lessons/${currentLessons[0].series}/${currentLessons[0].slug}`}
              class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-full transition duration-300 shadow-md"
            >
              Read Now
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  )}

  <!-- LESSON GRID -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {featuredLessons.map((lesson) => (
      <a 
        href={`/lessons/${lesson.series}/${lesson.slug}`}
        class="bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 overflow-hidden block hover:scale-105 transform transition-transform duration-300"
      >
        <div class="aspect-video overflow-hidden">
          <img
            src={lesson.image}
            alt={lesson.title}
            class="w-full h-full object-cover transition duration-300"
            loading="lazy"
          />
        </div>
        <div class="p-6">
          <div class="flex items-center gap-2 mb-3">
            <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded-full capitalize">
              {lesson.series.replace(/-/g, ' ')}
            </span>
            {lesson.current && (
              <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">
                New
              </span>
            )}
          </div>
          <h3 class="font-serif text-xl font-semibold text-gray-900 mb-2 line-clamp-2">
            {lesson.title}
          </h3>
          <p class="font-sans text-sm text-gray-600 mb-4 line-clamp-3">
            {lesson.subtitle}
          </p>
        </div>
      </a>
    ))}
  </div>

  <!-- VIEW ALL LESSONS CTA -->
  <div class="text-center mt-12">
    <a
      href="/lessons"
      class="inline-flex items-center bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-8 rounded-full transition duration-300"
    >
      View All Lessons
      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
